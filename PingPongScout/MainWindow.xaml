<Window x:Class="PingPongScout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingPongScout"
        xmlns:Controls="clr-namespace:LightBuzz.Vitruvius.Controls;assembly=LightBuzz.Vitruvius.Controls"
        mc:Ignorable="d"
        Title="Ping Pong | KINECT Depth" 
        Width="1200" Height="800"
        WindowState="Normal"
        Loaded="Window_Loaded"
        Closed="Window_Closed">
    <Grid Background="Black">
        <Viewbox>
            <Grid Width="512" Height="424">
                <Image Name="camera" Stretch="Uniform" />
                <Canvas Name="canvas">
                    <Controls:KinectViewer x:Name="kinectViewer" Visibility="Visible" Visualization="Depth"/>
                </Canvas>
            </Grid>
        </Viewbox>
    </Grid>
</Window>

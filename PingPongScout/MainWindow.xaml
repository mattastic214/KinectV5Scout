<Window x:Class="PingPongScout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingPongScout"
        xmlns:Controls="clr-namespace:LightBuzz.Vitruvius.Controls;assembly=LightBuzz.Vitruvius.Controls"
        mc:Ignorable="d"
        Title="Ping Pong | KINECT" 
        Height="800" Width="1200"
        WindowState="Maximized"
        Closing="WindowClosing">
    <Grid Background="Black">
        <Viewbox>
            <Grid Width="1920" Height="1080">
                <Image Name="camera" Stretch="Uniform" />
                <Canvas Name="canvas">
                    <Controls:KinectViewer x:Name="kinectViewer" Visibility="Collapsed"/>
                </Canvas>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
